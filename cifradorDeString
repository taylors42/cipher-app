alphabet = [ "a","b","c","d","e","f","g","h","i","j","k",
"l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"];
let palavraFinal = "";
const cifra = (word, key) => 
{
  for (x of word) 
  {
      if ((alphabet.indexOf(x) + key ) >= 26){ 
        palavraFinal = palavraFinal + alphabet[(alphabet.indexOf(x) + key - 26 )]
      } else {  
      palavraFinal = palavraFinal + alphabet[alphabet.indexOf(x) + key] }
    }
    console.log(palavraFinal)
}
